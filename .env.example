# Baulkham & Castle Hill Property Tracker Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Database Configuration
# =============================================================================
# Path to SQLite database file
# Default: baulkandcastle_properties.db in project root
BAULKANDCASTLE_DB_PATH=baulkandcastle_properties.db

# =============================================================================
# API Server Configuration
# =============================================================================
# Host to bind the API server to
# Use 0.0.0.0 to allow external connections
BAULKANDCASTLE_API_HOST=127.0.0.1

# Port for the API server
BAULKANDCASTLE_API_PORT=5000

# Enable Flask debug mode (set to false in production)
BAULKANDCASTLE_DEBUG=false

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
BAULKANDCASTLE_LOG_LEVEL=INFO

# Log file path (optional, logs to console only if not set)
# BAULKANDCASTLE_LOG_FILE=logs/baulkandcastle.log

# =============================================================================
# Scraper Configuration
# =============================================================================
# Target suburbs (comma-separated)
BAULKANDCASTLE_TARGET_SUBURBS=BAULKHAM HILLS,CASTLE HILL

# Request delay in seconds (to avoid rate limiting)
BAULKANDCASTLE_SCRAPE_DELAY=2

# =============================================================================
# ML Model Configuration
# =============================================================================
# Directory for storing trained models
BAULKANDCASTLE_MODEL_DIR=ml/models

# Model version identifier
BAULKANDCASTLE_MODEL_VERSION=1.0.0

# =============================================================================
# Frontend Configuration (Production)
# =============================================================================
# Directory containing built React frontend
BAULKANDCASTLE_FRONTEND_DIR=frontend/dist
